@{
    ViewData["Title"] = "Hardcoded Credentials Exploitation";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        Encrypt a secret, it's <b>FREE</b>!
    </p>

    <hr />
    
    <div class="input-group">
        <div class="form-outline">
            <input type="text" value="Test" id="plaintext" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary" onclick="encrypt()">
            <i class="fas fa-run">Run</i>
        </button>
    </div>
    
    <div class="card text-left" style="margin-top: 10px">
        <pre id="output">
        NO DATA
        </pre>
    </div>
</div>

<div class="d-flex justify-content-between">
    <div>
        <a class="text-light btn btn-secondary" asp-area="" asp-controller="HardcodedSecrets" asp-action="Index">Previous: Hardcoded Credentials</a>
    </div>
    <div>
        <a class="text-light btn btn-secondary" asp-area="" asp-controller="HardcodedSecrets" asp-action="Solution">Next: Solution</a>
    </div>
</div>

<script async>
    function encrypt() {
        let q = $("#plaintext").val()
        $.getJSON(`/HardcodedSecrets/Encrypt?plaintext=${q}`, function(json) {
          $("#output").text(json.value.ciphertext);
        });
    }
</script>
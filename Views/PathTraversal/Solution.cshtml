    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>Feel free to upload any valid files!</p>
    <form method="post" asp-area="" asp-controller="PathTraversal" asp-action="UploadSafe" enctype="multipart/form-data">
        <input type="file" name="files" multiple="multiple" />
        <input type="submit" class="btn btn-primary" name="Upload" value="Upload" /> 
    </form>
</div>

